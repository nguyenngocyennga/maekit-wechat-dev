text {
  color: #37474F;
  font-weight: 400;
  font-size: 40rpx;
  margin: 10rpx auto;
}

.icon {
height: 70rpx;
width: 70rpx;
}

.tool-icon {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.tool-text {
  padding: 0;
  margin: 0 20rpx;
  font-size: 30rpx;
}

.box-element {
  flex-direction: column;
  padding: 50rpx;
  margin-bottom: 50rpx;
}
.box-note {
  flex-direction: column;
  padding-top: 300rpx;
  padding-left: 40rpx;
  margin-bottom: 10rpx;
}

.footer-links {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  justify-content: space-between;
  height: 115rpx;
  color: rgba(0,0,0,0.3);
  position: fixed;
  bottom: 0;
  background-color: #FFFFFF;
  width: 97vw;
  padding: 15rpx 15rpx;
  border-top: 1rpx solid rgba(55, 71, 79, 0.295);
}

.footer-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer-icon image {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.7;
}

.icon-text {
  color: #37474F;
  font-weight: 300;
  font-size: 20rpx;
  line-height: 25rpx;
  align-content: center;
}