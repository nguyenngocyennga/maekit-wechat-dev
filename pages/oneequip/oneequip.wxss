.blue-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  background-color: #ccffee;
} 
h3 {
  font-family: 'Gill Sans MT';
  font-weight: 900;
  font-size: 33rpx;
  color: #37474F;
  line-height: 60rpx;
}

h4 {
  color: #37474F;
  font-weight: 500;
  font-size: 28rpx;
  line-height: 30rpx;
}

.pic {
  object-fit: cover;
  overflow: hidden;
  border-radius: 7rpx;
  height: 40vh;
}

