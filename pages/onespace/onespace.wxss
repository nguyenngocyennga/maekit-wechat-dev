h3 {
  font-family: 'Gill Sans MT';
  font-weight: 900;
  font-size: 33rpx;
  line-height: 100rpx;
  color: #37474F;
}

h4 {
  color: #37474F;
  font-weight: 500;
  font-size: 28rpx;
  line-height: 50rpx;
}

.box-element {
  padding: 50rpx;
  
}
.pic {
  object-fit: cover;
  overflow: hidden;
  border-radius: 7rpx;
  height: 40vh;
}

h6 {
  color: #37474F;
  font-weight: 300;
  font-size: 22rpx;
  line-height: 30rpx;
  margin: 0;
}

.sub-text {
  color: #37474F;
  font-weight: 200;
  font-size: 20rpx;
  line-height: 30rpx;
}


