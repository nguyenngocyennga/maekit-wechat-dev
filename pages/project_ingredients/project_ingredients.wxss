.container {
  padding-bottom: 115rpx;
}

.banner {
  height: 410rpx ;
  background-size: cover;
  background-position: center;
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  position: relative;
}

h2 {
  font-family: 'Gill Sans MT';
  font-weight: bold;
  font-size: 44rpx;
  color: #FFFFFF;
  position: absolute;
  left: 50rpx;
  bottom: 50rpx;
  text-align: left;
}

h3 {
  font-family: 'Gill Sans MT';
  font-weight: 900;
  font-size: 43rpx;
  color: #23B8FF;
}

h4 {
  color: #ff6176;
  font-weight: 500;
  font-size: 28rpx;
  line-height: 40rpx;
}

.view-2columns {
  display: grid;
  grid-template-columns: auto auto;
  grid-gap: 30rpx;
  padding: 10rpx 0;
}

.individual-prototypes {
  display: flex;
  flex-direction: column;
  align-items: left;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}

.individual-prototypes > image {
  object-fit: cover;
  overflow: hidden;
  border-radius: 7rpx;
  width: 60vw;
  height: 25vh;
  margin-top: 20rpx;
}

text {
  color: #37474F;
  font-weight: 300;
  font-size: 27rpx;
  margin-top: 0rpx;
}
.
.icon {
height: 70rpx;
width: 70rpx;
}

.footer-links {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  justify-content: space-between;
  height: 115rpx;
  color: rgba(0,0,0,0.3);
  position: fixed;
  bottom: 0;
  background-color: #FFFFFF;
  width: 97vw;
  padding: 15rpx 15rpx;
  border-top: 1rpx solid rgba(55, 71, 79, 0.295);
}

.footer-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer-icon image {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.7;
}

.icon-text {
  color: #37474F;
  font-weight: 300;
  font-size: 20rpx;
  line-height: 25rpx;
  align-content: center;
}

.description {
  color: #23B8FF;
  font-weight: 600;
  font-size: 30rpx;
}

.view {
  padding-top: 0rpx;
  margin-top: 0rpx;
}